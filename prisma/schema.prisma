// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Zonas {
  id           Int            @id @default(autoincrement())
  nombre       String
  comisionados Comisionados[]
}

model FrecuenciaPagos {
  id        Int         @id @default(autoincrement())
  tipo      String
  prestamos Prestamos[]
}

model Usuarios {
  id          Int           @id @default(autoincrement())
  nombre      String
  telefono    Int
  email       String        @unique
  password    String
  rol         String
  comisionado Comisionados?
}

model Comisionados {
  id        Int         @id @default(autoincrement())
  usuario   Usuarios    @relation(fields: [usuarioId], references: [id])
  usuarioId Int         @unique
  zona      Zonas       @relation(fields: [zonaId], references: [id])
  zonaId    Int
  prestamos Prestamos[]
}

model Clientes {
  id        Int         @id @default(autoincrement())
  nombre    String
  telefono  Int
  domicilio String
  prestamos Prestamos[]
}

model Prestamos {
  id            Int             @id @default(autoincrement())
  cliente       Clientes        @relation(fields: [clienteId], references: [id])
  clienteId     Int
  comisionado   Comisionados    @relation(fields: [comisionadoId], references: [id])
  comisionadoId Int
  freqPago      FrecuenciaPagos @relation(fields: [freqPagoId], references: [id])
  freqPagoId    Int
  monto         Float           @db.Double
  interes       Float           @db.Double
  saldo         Float           @db.Double
  abonos        Abonos[]
}

model Abonos {
  id            Int       @id @default(autoincrement())
  cantidad      String
  fecha         DateTime  @db.Date
  estatus_abono String
  prestamo      Prestamos @relation(fields: [prestamoId], references: [id])
  prestamoId    Int
}
